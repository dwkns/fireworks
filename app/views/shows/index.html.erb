<%= javascript_include_tag 'shows_index' %>
<%= stylesheet_link_tag "blue" %>
<%= javascript_include_tag 'icheck' %>
<%= stylesheet_link_tag "index" %>
<div id="welcome_notice"> Welcome to Launchsh.it! </div>
<div id='index_page'>
  <div id="shows_div">
    <% if flash[:notice] %>
    <%= flash[:notice] %>
    <% end %>

    <h3>Your Shows</h3>
    <% @shows.each do |show| %>
    <ul>
      <p data-show-id='<%= show.id %>'>
        <input name='show_radios' type='radio' data-show-id='<%= show.id %>' />
        <%= show.name %>
        <br>
        <%= link_to 'Edit', edit_show_path(show) %>
        <%= link_to 'Remove', show_path(show), :method => :delete %>
        
      </p>  
    </ul>
    <% end %>

    <h3>Add a Show</h3>
    <%= form_for  @show  do |f| %>
      <%= f.label :name, 'Show name' %>
      <%= f.text_field :name %>
      <%= f.submit 'Add Show' %>
    <% end %>
  </div>
  
  <div class="user_instructions">Select the show and the board you want and click upload</div>

  <div id="boards_div">
  <h3>Your Boards</h3>
    <% @boards.each do |board| %>
      <ul data-board-id='<%= board.boardID %>'>
        <article data-board-id='<%= board.boardID %>'>
        <input name='board_radios' type='radio' data-board-id='<%= board.boardID %>' />
        <%= board.name %> - <%= board.boardID %>
          <br>
          <%= link_to 'remove', board_path(board), :method => :delete %> 
          <div class="status">Offline</div>
        </article>  
      </ul>
    <% end %>

    <h3>Add a Board</h3>
    <%= form_for  @board  do |f| %>
      <%= f.label :name, 'Board name' %>
      <%= f.text_field :name %>

      <%= f.label :boardID, 'Board ID' %>
      <%= f.text_field :boardID, {:class => 'board_id_input'} %>

      <%= f.submit 'Add Board' %>
    <% end %>
  </div>
</div>

<button class="upload" > Upload </button>

