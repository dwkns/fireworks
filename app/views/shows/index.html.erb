<%= stylesheet_link_tag "index" %>
<h1>Welcome to the Firework App!</h1>
<div id='index_page'>
  <div="shows_div">

  <% if flash[:notice] %>
  <%= flash[:notice] %>
  <% end %>

  <h3>Add a Show</h3>
  <%= form_for  @show  do |f| %>
    <%= f.label :name, 'Show name' %>
    <%= f.text_field :name %>
    <%= f.submit 'Save' %>
  <% end %>

  <h3>Your Shows</h3>
  <% @shows.each do |show| %>
  <ul>
    <li data-show-id='<%= show.id %>'><%= show.name %>
      <%= link_to 'Edit', edit_show_path(show) %>
      <%= link_to 'Remove', show_path(show), :method => :delete %>
    </li>  
    </ul>
  <% end %>
  </div>
<div id="boards_div">

<h3>Add a Board</h3>
<%= form_for  @board  do |f| %>
  <%= f.label :name, 'Board name' %>
  <%= f.text_field :name %>

  <%= f.label :boardID, 'Board ID' %>
  <%= f.text_field :boardID %>

  <%= f.submit 'Save' %>
<% end %>

<h3>Your Boards</h3>
<% @boards.each do |board| %>
  <ul>
    <li data-board-id='<%= board.id %>' >Name : <%= board.name %>  
    <%= link_to 'Remove', board_path(board), :method => :delete %> 
    </li>  
    <li>ID : <%= board.boardID %></li>  
  </ul>
  <% end %>
  <p><%= link_to "Add Firework", fireworks_path %></p>
</div>
</div>

